<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PatientNotes.PatientNotesListPage" Title="Patient Notes">
	<ContentPage.ToolbarItems>
        <ToolbarItem Icon="plus.png" Clicked="OnItemAdded" />
    </ContentPage.ToolbarItems>
    <StackLayout>
    <Image Source="siteLogo.png" Margin="30" HeightRequest="100"></Image>
    <Label Text="Previous Notes:"></Label>
	<ListView x:Name="listView" Margin="20" ItemSelected="OnItemSelected">
		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<StackLayout Margin="20,0,0,0" Orientation="Horizontal">
						<Label Text="{Binding Name}" VerticalTextAlignment="Center" />
						<Image Source="check.png" IsVisible="{Binding Done}" HorizontalOptions="EndAndExpand" />
					</StackLayout>
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>